<% provide(:title, "Forgot Password") %>


<% provide(:title, "Login") %>

<div class="row justify-content-center">
  <div class="col-sm-12 col-md-9 col-lg-7 col-xl-5">
    <div class="card auth-card">
      <div class="card-body">
        <h4 class="custom-card-header">Forgot your password</h4>

        <%= render "layouts/flash_messages" %>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.label :email, "Email Address" %>
            <%= f.email_field :email, class: "form-control", autofocus: true, required: true, placeholder: "Email Address", autocomplete: "email", maxlength: 255 %>
          </div>

          <%= f.submit "Send", class: "btn btn-primary form-btn", data: { disable_with: "Sending..." } %>
        <% end %>

        <hr>

        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
