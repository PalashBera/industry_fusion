<% provide(:title, "Password Change") %>
<% provide(:company_name, "Industry Fusion") %>
<% password_reset_url = "http://app.lvh.me:3000/users/password/edit?reset_password_token=#{ @token }" %>

<tr>
  <td class="body-title" style="color: #153643; font-family: sans-serif; padding: 0 0 15px 0; font-size: 24px; line-height: 28px; font-weight: bold; text-transform: uppercase;">
    Password Change Request
  </td>
</tr>

<tr>
  <td style="color: #153643; font-family: sans-serif; font-size: 16px; line-height: 22px;">
    <p>Dear <%= @resource.full_name %>,</p>
    <p>Someone has requested a link to change your password. You can do this through the link below.</p>
  </td>
</tr>

<tr>
  <td style="padding: 20px 0 20px 0;">
    <table border="0" cellspacing="0" cellpadding="0">
      <tr height="45">
        <td>
          <a href="<%= password_reset_url %>" target="_blank" class="primary-button" style="background-color: #e05443; color: #FFFFFF; text-decoration: none; text-align: center; font-size: 18px; font-family: sans-serif; font-weight: bold; padding: 12px 30px;">Change password</a>
        </td>
      </tr>
    </table>
  </td>
</tr>

<tr>
  <td style="color: #153643; font-family: sans-serif; font-size: 16px; line-height: 22px;">
    <p>If you didn't request this, please ignore this email.</p>
    <p>Your password won't change until you access the link above and create a new one.</p>
  </td>
</tr>

<tr>
  <td style="color: #153643; font-family: sans-serif; font-size: 16px; line-height: 22px;">
    <p>Thanks,</p>
    <p>Team Industry Fusion</p>
  </td>
</tr>
