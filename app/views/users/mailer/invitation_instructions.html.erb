<p><%= t("devise.mailer.invitation_instructions.hello", email: @resource.email) %></p>

<p><%= t("devise.mailer.invitation_instructions.someone_invited_you", { invitor_name: @resource.invited_by.full_name, url: "http://app.lvh.me:3000" }) %></p>

<% customized_invitation_url = "http://app.lvh.me:3000/users/invitation/accept?invitation_token=#{ @token }" %>

<p><%= link_to t("devise.mailer.invitation_instructions.accept"), customized_invitation_url %></p>

<% if @resource.invitation_due_at %>
  <p><%= t("devise.mailer.invitation_instructions.accept_until", due_date: l(@resource.invitation_due_at, format: :'devise.mailer.invitation_instructions.accept_until_format')) %></p>
<% end %>

<p><%= t("devise.mailer.invitation_instructions.ignore") %></p>
