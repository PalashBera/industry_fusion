<% provide(:title, "Signup") %>

<div class="row justify-content-center">
  <div class="col-sm-12 col-md-9 col-lg-7 col-xl-5">
    <div class="card auth-card">
      <div class="card-body">
        <h4 class="custom-card-header">Create new account</h4>

        <%= render "layouts/flash_messages" %>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.label :first_name, "First Name" %>
            <%= f.text_field :first_name, class: "form-control", autofocus: true, required: true, placeholder: "First Name", maxlength: 255 %>
          </div>

          <div class="form-group">
            <%= f.label :last_name, "Last Name" %>
            <%= f.text_field :last_name, class: "form-control", required: true, placeholder: "Last Name", maxlength: 255 %>
          </div>

          <div class="form-group">
            <%= f.label :email, "Email Address" %>
            <%= f.email_field :email, class: "form-control", required: true, placeholder: "Email Address", maxlength: 255 %>
          </div>

          <div class="form-group">
            <%= f.label :mobile_number, "Mobile Number" %>
            <%= f.text_field :mobile_number, class: "form-control", required: true, placeholder: "Mobile Number", minlength: 10, maxlength: 10 %>
          </div>

          <div class="form-group">
            <%= f.label :name, "Organization Name" %>
            <%= f.text_field :name, class: "form-control", required: true, placeholder: "Organization Name", maxlength: 255 %>
          </div>

          <div class="form-group">
            <%= f.label :fy_start_month, "Financial Year Start Month" %>
            <%= f.select :fy_start_month, month_selection, { prompt: "-- Select Month --" }, { class: "form-control", required: true } %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: "form-control", required: true, placeholder: "Password", minlength: 6, maxlength: 128 %>
            <small id="passwordHelp" class="form-text text-muted">Password should be minimum <%= @minimum_password_length %> characters.</small>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "Password Confirmation" %>
            <%= f.password_field :password_confirmation, class: "form-control", required: true, placeholder: "Password Confirmation", minlength: 6, maxlength: 128 %>
          </div>

          <%= f.submit "Signup", class: "btn btn-primary form-btn", data: { disable_with: "Signing up..." } %>
        <% end %>

        <hr>

        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
