<% provide(:title, "Sign Up") %>

<div class="row justify-content-center">
  <div class="col-sm-12 mb-4">
    <h3 class="text-center">Sign Up</h3>
  </div>

  <div class="col-sm-12 col-md-7 col-lg-5 col-xl-4">
    <div class="card">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "shared/error_messages", resource: resource %>

          <div class="form-row">
            <div class="form-group col-sm-12 col-md-6">
              <%= f.label :first_name, "First Name" %>
              <%= f.text_field :first_name, class: "form-control", autofocus: true, required: true, placeholder: "First Name", maxlength: 255 %>
            </div>

            <div class="form-group col-sm-12 col-md-6">
              <%= f.label :last_name, "Last Name" %>
              <%= f.text_field :last_name, class: "form-control", required: true, placeholder: "Last Name", maxlength: 255 %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :email, "Email Address" %>
            <%= f.email_field :email, class: "form-control", required: true, placeholder: "Email Address", maxlength: 255 %>
          </div>

          <div class="form-group">
            <%= f.label :mobile_number, "Mobile Number" %>
            <%= f.text_field :mobile_number, class: "form-control", required: true, placeholder: "Mobile Number", minlength: 10, maxlength: 10 %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: "form-control", required: true, placeholder: "Password", minlength: 6, maxlength: 128 %>
            <small id="passwordHelp" class="form-text text-muted">Password should be minimum <%= @minimum_password_length %> characters.</small>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "Password Confirmation" %>
            <%= f.password_field :password_confirmation, class: "form-control", required: true, placeholder: "Password Confirmation", minlength: 6, maxlength: 128 %>
          </div>

          <%= f.submit "Sign up", class: "btn btn-primary", data: { disable_with: "Signing up..." } %>
        <% end %>

        <hr>

        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
