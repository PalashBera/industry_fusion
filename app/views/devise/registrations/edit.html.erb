<% provide(:title, "Edit #{resource_name.to_s.humanize}") %>

<div class="row justify-content-center">
  <div class="col-sm-12 mb-4">
    <h3 class="text-center">Edit User Profile</h3>
  </div>

  <div class="col-sm-12 col-md-7 col-lg-5 col-xl-4">
    <div class="card">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "shared/error_messages", resource: resource %>

          <div class="form-row">
            <div class="form-group col-sm-12 col-md-6">
              <%= f.label :first_name, "First Name" %>
              <%= f.text_field :first_name, class: "form-control", autofocus: true, required: true, placeholder: "First Name", autocomplete: "first_name", maxlength: 255 %>
            </div>

            <div class="form-group col-sm-12 col-md-6">
              <%= f.label :last_name, "Last Name" %>
              <%= f.text_field :last_name, class: "form-control", required: true, placeholder: "Last Name", autocomplete: "last_name", maxlength: 255 %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :email, "Email Address" %>
            <%= f.email_field :email, class: "form-control", required: true, placeholder: "Email Address", autocomplete: "email", maxlength: 255 %>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <small id="emailHelp" class="form-text text-muted">Email confirmation is waiting for <%= resource.unconfirmed_email %>.</small>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.label :mobile_number, "Mobile Number" %>
            <%= f.text_field :mobile_number, class: "form-control", required: true, placeholder: "Mobile Number", autocomplete: "mobile_number", minlength: 10, maxlength: 10 %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: "form-control", placeholder: "Password", minlength: 6, maxlength: 128, autocomplete: "new-password" %>
            <small class='form-text text-muted'>Leave blank if you don't want to change it.</small>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "Password Confirmation" %>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation", minlength: 6, maxlength: 128, autocomplete: "new-password" %>
          </div>

          <div class="form-group">
            <%= f.label :current_password, "Current Password" %>
            <%= f.password_field :current_password, class: "form-control", required: true, placeholder: "Password", minlength: 6, maxlength: 128, autocomplete: "current-password" %>
            <small class='form-text text-muted'>We need your current password to confirm your changes.</small>
          </div>

          <%= f.submit "Update Profile", class: "btn btn-primary btn-xs-block", data: { disable_with: "Updating..." } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
