<% provide(:title, "Change Password") %>

<div class="row justify-content-center">
  <div class="col-sm-12 mb-4">
    <h3 class="text-center">Change Password</h3>
  </div>

  <div class="col-sm-12 col-md-7 col-lg-5 col-xl-4">
    <div class="card">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: "form-control", required: true, autofocus: true, placeholder: "Password", minlength: 6, maxlength: 128, autocomplete: "new-password" %>
            <small id="passwordHelp" class="form-text text-muted">Password should be minimum <%= @minimum_password_length %> characters.</small>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "Password Confirmation" %>
            <%= f.password_field :password_confirmation, class: "form-control", required: true, placeholder: "Password Confirmation", minlength: 6, maxlength: 128, autocomplete: "new-password" %>
          </div>

          <%= f.submit "Change Password", class: "btn btn-primary btn-xs-block", data: { disable_with: "Changing..." } %>
        <% end %>

        <hr>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
