<% provide(:title, "Invite #{resource_name.to_s.humanize}") %>

<div class="row justify-content-center">
  <div class="col-sm-12 mb-4">
    <h3 class="text-center">Invite User</h3>
  </div>

  <div class="col-sm-12 col-md-7 col-lg-5 col-xl-4">
    <div class="card">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.label :email, "Email Address" %>
            <%= f.email_field :email, class: "form-control", required: true, placeholder: "Email Address", autocomplete: "email", maxlength: 255 %>
          </div>

          <%= f.submit "Invite", class: "btn btn-primary btn-xs-block", data: { disable_with: "Please Wait..." } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
