<% provide(:title, "New Organization") %>
<% provide(:page_title, "New Organization") %>

<div class="row justify-content-center">
  <div class="col-sm-12 col-md-7 col-lg-5 col-xl-5">
    <div class="card">
      <div class="card-body">
        <%= form_for @organization do |f| %>
          <%= render partial: "shared/error_messages", locals: { resource: @organization } %>

          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control", autofocus: true, required: true, placeholder: "Name", maxlength: 255 %>
          </div>

          <div class="form-group">
            <%= f.label :address1, "Address 1" %>
            <%= f.text_field :address1, class: "form-control", required: true, placeholder: "Address 1", maxlength: 255 %>
          </div>

          <div class="form-group">
            <%= f.label :address2, "Address 2" %>
            <%= f.text_field :address2, class: "form-control", placeholder: "Address 2", maxlength: 255 %>
          </div>

          <div class="form-row">
            <div class="form-group col-sm-12 col-md-6">
              <%= f.label :city %>
              <%= f.text_field :city, class: "form-control", required: true, placeholder: "City", maxlength: 255 %>
            </div>

            <div class="form-group col-sm-12 col-md-6">
              <%= f.label :state %>
              <%= f.text_field :state, class: "form-control", required: true, placeholder: "State", maxlength: 255 %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-sm-12 col-md-6">
              <%= f.label :country %>
              <%= f.text_field :country, class: "form-control", required: true, placeholder: "Country", maxlength: 255 %>
            </div>

            <div class="form-group col-sm-12 col-md-6">
              <%= f.label :pin_code, "PIN Code" %>
              <%= f.text_field :pin_code, class: "form-control", required: true, placeholder: "PIN Code", minlength: 6, maxlength: 6 %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :phone_number, "Phone Number" %>
            <%= f.text_field :phone_number, class: "form-control", placeholder: "Phone Number", maxlength: 255 %>
          </div>

          <div class="form-row">
            <div class="form-group col-sm-12 col-md-6">
              <%= f.label :fy_start_month, "Start Month" %>
              <%= f.select :fy_start_month, month_selection, { prompt: "-- Select Month --" }, { class: "form-control", required: true } %>
              <small class="form-text text-muted">Financial year start month.</small>
            </div>

            <div class="form-group col-sm-12 col-md-6">
              <%= f.label :fy_end_month, "End Month" %>
              <%= f.select :fy_end_month, month_selection, { prompt: "-- Select Month --" }, { class: "form-control", required: true } %>
              <small class="form-text text-muted">Financial year end month.</small>
            </div>
          </div>

          <%= f.submit "Create", class: "btn btn-primary", data: { disable_with: "Saving..." } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
