<div class="modal fade" id="filter_modal" tabindex="-1" role="dialog" aria-labelledby="filterModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="filterModalLabel">Search Vendors</h5>
        <%= image_tag "cancel.svg", class: "close", "data-dismiss": "modal", "aria-label":"Close" %>
      </div>

      <%= search_form_for @search, url: vendor_selection_new_procurement_quotation_request_path do |f|  %>
        <div class="modal-body">
          <div class="form-row">
            <div class="form-group col-md-6 col-sm-12">
              <%= f.label :vendor_store_information_name_i_cont_any, "Name" %>
              <%= f.search_field :vendor_store_information_name_i_cont_any, placeholder: "Name", title: "Type vendor name", class: "form-control", autocomplete: :off %>
            </div>

            <div class="form-group col-md-6 col-sm-12">
              <%= f.label :vendor_email_i_cont_any, "Email" %>
              <%= f.search_field :vendor_email_i_cont_any, placeholder: "Email", title: "Type vendor email", class: "form-control", autocomplete: :off %>
            </div>

            <div class="form-group col-md-6 col-sm-12">
              <%= f.label :vendor_first_name_or_vendor_last_name_i_cont_any, "Contact Person" %>
              <%= f.search_field :vendor_first_name_or_vendor_last_name_i_cont_any, placeholder: "Contact Person", title: "Type contact person name", class: "form-control", autocomplete: :off %>
            </div>

            <div class="form-group col-md-6 col-sm-12">
              <%= f.label :vendor_mobile_number_i_cont_any, "Contact Number" %>
              <%= f.search_field :vendor_mobile_number_i_cont_any, placeholder: "Contact Number", title: "Type vendor contact number", class: "form-control", autocomplete: :off %>
            </div>
          </div>
        </div>

        <div class="modal-footer">
          <%= link_to "Remove Filter", vendor_selection_new_procurement_quotation_request_path, class: "btn btn-secondary" %>
          <%= f.submit "Filter", data: { disable_with: "Please wait..." }, class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
