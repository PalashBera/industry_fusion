<%= form_tag form_submit_path do %>
  <div class="table-responsive">
    <table id="records_table" class="table table-hover indent-table" width="100%">
      <thead>
        <tr>
          <th scope="col"></th>
          <th scope="col">Serial</th>
          <th scope="col">Item</th>
          <th scope="col">Make</th>
          <th scope="col">Quantity</th>
          <th scope="col">Cost&nbsp;Center</th>
          <th scope="col">Requirement&nbsp;Date</th>
          <th scope="col">Priority</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>

      <tbody>
        <%= render "transactions/indents/page_items" %>
      </tbody>
    </table>
  </div>

  <div class="fixed-action-bar text-center hide">
    <%# <%= link_to "Approve", transactions_indents_approved_indents_path, method: :post, class: "btn btn-danger" %>
    <%= submit_tag "Approve", "data-disable-with": "Approving", class: "btn btn-danger" %>
  </div>
<% end %>
