<% provide(:title, "Item Groups") %>

<section class="mb-4 d-flex justify-content-between">
  <span class="page-header">Item Groups</span>

  <section>
    <%= new_link_using_modal(controller_name) %>
    <%= filter_button(params[:q]) %>
    <%= excel_export_btn(controller_name) %>
    <%= import_modal_btn(controller_name) %>
  </section>
</section>

<div class="table-responsive">
  <table class="table table-hover" width="100%">
    <thead class="thead-light">
      <tr>
        <th scope="col">#</th>
        <th scope="col"><%= sort_link @search, :name, "Name" %></th>
        <th scope="col">Description</th>
        <th scope="col"><%= sort_link @search, :archive, "Status" %></th>
        <th scope="col">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @item_groups.each.with_index(1) do |item_group, index| %>
        <tr>
          <td scope="row"><%= index %></td>
          <td><%= item_group.name %></td>
          <td><%= item_group.description %></td>
          <td><%= archive_status(item_group.archive).html_safe %></td>
          <td>
            <%= edit_link_using_modal(controller_name, item_group) %> |
            <%= change_logs_link_using_modal(controller_name, item_group) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= render "shared/pagy" %>
<%= render "filter_form" %>
<%= render "shared/import_modal" %>
<%= render "shared/form_modal_container" %>
