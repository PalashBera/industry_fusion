<%= render layout: "shared/filter_modal", locals: { resource: @search, namespace: "master", modal_header: "Search Vendors" } do |f| %>
  <div class="form-row">
    <div class="form-group col-md-6 col-sm-12">
      <%= f.label :name_cont_any, "Name" %>

      <div class="selectpicker-filter-dropdown">
        <%= f.select :name_cont_any, Vendor.order_by_name.pluck(:name, :name), {}, { multiple: true, class: "selectpicker", "data-live-search": "true" } %>
        <%= remove_selection_link %>
      </div>
    </div>

    <div class="form-group col-md-6 col-sm-12">
      <%= f.label :email_cont_any, "Email" %>

      <div class="selectpicker-filter-dropdown">
        <%= f.select :email_cont_any, Vendor.order_by_name.pluck(:email, :email), {}, { multiple: true, class: "selectpicker", "data-live-search": "true" } %>
        <%= remove_selection_link %>
      </div>
    </div>
  </div>
<% end %>
