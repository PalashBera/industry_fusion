<%= render layout: "shared/filter_modal", locals: { resource: @search, namespace: "master", modal_header: "Search Items" } do |f| %>
  <div class="form-row">
    <div class="form-group col-md-6 col-sm-12">
      <%= f.label :item_name_i_cont_any, "Item" %>
      <%= f.search_field :item_name_i_cont_any, placeholder: "Item Name", title: "Type item name", class: "form-control", autocomplete: :off %>
    </div>

    <div class="form-group col-md-6 col-sm-12">
      <%= f.label :brand_name_i_cont_any, "Brand" %>
      <%= f.search_field :brand_name_i_cont_any, placeholder: "Brand Name", title: "Type brand name", class: "form-control", autocomplete: :off %>
    </div>

    <div class="form-group col-md-6 col-sm-12">
      <%= f.label :cat_no_i_cont_any, "Catalogue Number" %>
      <%= f.search_field :cat_no_i_cont_any, placeholder: "Catalogue Number", title: "Type Catalogue number name", class: "form-control", autocomplete: :off %>
    </div>

    <div class="form-group col-md-6 col-sm-12">
      <%= f.label :archive_eq, "Status" %>
      <%= f.select :archive_eq, status_selection, { include_blank: true }, { class: "form-control" } %>
    </div>
  </div>
<% end %>
