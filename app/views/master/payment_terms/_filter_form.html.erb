<%= render layout: "shared/filter_modal", locals: { resource: @search, namespace: "master", modal_header: "Search Payment Term" } do |f| %>
  <div class="form-row">
    <div class="form-group col-md-6 col-sm-12">
      <%= f.label :name_i_cont_any, "Name" %>
      <%= f.search_field :name_i_cont_any, placeholder: "Name", title: "Type brand name", class: "form-control", autocomplete: :off %>
    </div>

    <div class="form-group col-md-6 col-sm-12">
      <%= f.label :archive_eq, "Status" %>
      <%= f.select :archive_eq, status_selection, { include_blank: true }, { class: "form-control" } %>
    </div>
  </div>
<% end %>
