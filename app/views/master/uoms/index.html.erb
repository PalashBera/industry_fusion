<% provide(:title, "Units of Measurements") %>

<h1>Units of Measurements</h1>

<section class="mb-4 d-flex justify-content-between">
  <section>
    <%= new_link_using_modal(controller_name) %>
    <%= filter_link_using_modal(params[:q]) %>
  </section>

  <section>
    <%= import_link_using_modal(controller_name) %>
    <%= excel_export_btn(controller_name) %>
  </section>
</section>

<% if @uoms.present? %>
  <%= render "index_table" %>
<% else %>
  <div class="card">
    <div class="card-body text-center">
      <% if params[:q].present? %>
        No result found. Please search with proper keywords.
      <% else %>
        No units of measurement has been added yet. <%= new_modal_link(controller_name) %>
      <% end %>
    </div>
  </div>
<% end %>
<%= render "filter_form" %>
<%= render "shared/import_modal" %>
<%= render "shared/form_modal_container" %>
