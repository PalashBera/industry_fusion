<% provide(:title, "Users") %>
<% provide(:page_title, "Users") %>

<div class="card">
  <div class="card-body">
    <section class="mb-4 d-flex justify-content-between">
      <section>
        <%= new_link_using_modal(controller_name) %>
      </section>

      <section>
        <%= excel_export_btn(controller_name) %>
      </section>
    </section>

    <% if @users.present? %>
      <%= render "index_table" %>
    <% else %>
      <div class="card">
        <div class="card-body text-center">
          <% if params[:q].present? %>
            No result found. Please search with proper keywords.
          <% else %>
            No user has been added yet. <%= new_modal_link(controller_name) %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render "shared/form_modal_container" %>
