<div class="card card-default">
  <div class="card-header">
    <h2>Settings</h2>
  </div>

  <div class="card-body pt-0">
    <ul class="nav nav-settings">
      <li class="nav-item">
        <%= link_to admin_indent_approval_levels_path, class: "nav-link #{"active" if active_class == "approval"}" do %>
          <i class="mdi mdi-clipboard-check mr-1"></i> Indent Approval Level
        <% end %>
      </li>

      <li class="nav-item">
        <%= link_to admin_qc_approval_levels_path, class: "nav-link #{"active" if active_class == "qc"}" do %>
          <i class="mdi mdi-clipboard-flow mr-1"></i> QC Approval Level
        <% end %>
      </li>

      <li class="nav-item">
        <%= link_to admin_po_approval_levels_path, class: "nav-link #{"active" if active_class == "po"}" do %>
          <i class="mdi mdi-cart mr-1"></i> PO Approval Level
        <% end %>
      </li>

      <li class="nav-item">
        <%= link_to admin_grn_approval_levels_path, class: "nav-link #{"active" if active_class == "grn"}" do %>
          <i class="mdi mdi-receipt mr-1"></i> GRN Approval Level
        <% end %>
      </li>
    </ul>
  </div>
</div>
