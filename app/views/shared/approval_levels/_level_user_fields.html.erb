<section class="row">
  <div class="form-group col-sm-8">
    <%= f.label :user_id %>
    <%= f.select :user_id, options_for_select(User.non_archived.map{ |u| [u.full_name, u.id] }, f.object.user_id), { prompt: "-- Select User --" }, { required: true, class: "form-control", disabled: !f.object.new_record? } %>
  </div>

  <div class="form-group col-sm-4 mt-6">
    <%= f.hidden_field :_destroy %>
    <%= link_to_remove_fields %>
  </div>
</section>
