<script>
  toastr.options = {
      closeButton: true,
      debug: false,
      newestOnTop: false,
      progressBar: true,
      positionClass: "toast-top-right",
      preventDuplicates: false,
      onclick: null,
      showDuration: "300",
      hideDuration: "1000",
      timeOut: "5000",
      extendedTimeOut: "1000",
      showEasing: "swing",
      hideEasing: "linear",
      showMethod: "fadeIn",
      hideMethod: "fadeOut"
    };

  <% flash.each do |type, message| %>
    toastr.<%= message_type(type) %>('<%= message %>', '<%= flash_message_prefix(message_type(type))%>')
  <% end %>
</script>
