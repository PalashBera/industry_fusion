<div class="modal fade" id="import_modal" tabindex="-1" role="dialog" aria-labelledby="filterModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="filterModalLabel">Import <%= controller_name.humanize.titleize %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <%= form_tag url_for(controller: controller_name, action: "import"), multipart: true do %>
        <div class="modal-body">
          <div class="form-group">
            <%= file_field_tag :file, required: true, accept: ".xlsx, .xls, .csv" %>
            <small class="form-text text-muted">Data import supports only .csv, .xls and .xlsx  format.</small>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary btn-xs-block order-2 order-sm-1" data-dismiss="modal" title="Close">Close</button>
          <%= submit_tag "Import", data: { disable_with: "Please wait..." }, class: "btn btn-primary btn-xs-block order-1 order-sm-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
