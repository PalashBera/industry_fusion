<div class="modal fade" id="import_modal" tabindex="-1" role="dialog" aria-labelledby="filterModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="filterModalLabel">Import <%= controller_name.humanize.titleize %></h5>
        <%= image_tag "cancel.svg", class: "close", "data-dismiss": "modal", "aria-label":"Close" %>
      </div>

      <%= form_tag url_for(controller: controller_name, action: "import"), multipart: true do %>
        <div class="modal-body">
          <div class="form-group">
            <%= file_field_tag :file, required: true, accept: ".csv" %>
            <small class="form-text text-muted">Data import supports only .csv formated file.</small>
          </div>

          <%= link_to "Download Sample File", "/csv_files/#{controller_name}.csv" %>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal" title="Close">Close</button>
          <%= submit_tag "Import", data: { disable_with: "Please wait..." }, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
