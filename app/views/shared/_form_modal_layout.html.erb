<div class="modal-header">
  <h5 class="modal-title" id="formModal"><%= resource.modal_header %></h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

<%= form_for [namespace.to_sym, resource], remote: true, html: { multipart: true } do |f| %>
  <div class="modal-body">
    <%= render partial: "shared/error_messages", locals: { resource: resource } %>

    <%= yield f %>
  </div>

  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal" title="Close">Close</button>
    <%= f.submit resource.button_name, class: "btn btn-primary", disabled_with: "Saving..." , title: "Save #{resource.class_title}" %>
  <div>
<% end %>
