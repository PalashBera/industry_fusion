<div class="modal fade" id="change_logs_modal" tabindex="-1" role="dialog" aria-labelledby="versionsModal" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-scrollable" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="versionsModal">Change logs for <strong><%= resource.public_send(attr) %></strong></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <p>This <%= resource.class_title.downcase %> has been created by <strong><%= resource.created_by.full_name %></strong> on <%= I18n.l(resource.created_at) %>.</p>

        <%= yield %>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary btn-xs-block" data-dismiss="modal" title="Close">Close</button>
      <div>
    </div>
  </div>
</div>
