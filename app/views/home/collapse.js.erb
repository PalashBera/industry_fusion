<% if @collapsed %>
  if($('.app-sidebar').hasClass('sidebar-minified-out')) {
    $('.app-sidebar').removeClass('sidebar-minified-out').addClass('sidebar-minified')
  }
<% else %>
  if($('.app-sidebar').hasClass('sidebar-minified')) {
    $('.app-sidebar').removeClass('sidebar-minified').addClass('sidebar-minified-out')
  }
<% end %>
