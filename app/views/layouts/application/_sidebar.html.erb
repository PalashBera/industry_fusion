          <li class="<%= active_sidebar("companies") %>">
            <%= link_to admin_companies_path, class: "sidenav-item-link" do %>
              <i class="mdi mdi-factory"></i>
              <span class="nav-text">Companies</span>
            <% end %>
          </li>

          <li class="<%= active_sidebar("warehouses") %>">
            <%= link_to admin_warehouses_path, class: "sidenav-item-link" do %>
              <i class="mdi mdi-office-building"></i>
              <span class="nav-text">Warehouses</span>
            <% end %>
          </li>

          <li class="<%= active_sidebar("approval_levels") %>">
            <%= link_to admin_approval_levels_indents_path, class: "sidenav-item-link" do %>
              <i class="mdi mdi-check-decagram"></i>
              <span class="nav-text">Approval Levels</span>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</aside>
